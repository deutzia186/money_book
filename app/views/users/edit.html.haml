.user-header
  .user-header__title
    Money Book
.account-page
  .account-page__inner
    .account-page__inner--left.account-page__header
      %h2 アカウントの編集
      %h5 編集後に更新
      = link_to "トップページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .actions
          = f.submit "更新", class: 'btn'
